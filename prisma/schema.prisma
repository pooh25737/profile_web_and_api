generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Work {
  id         Int      @id @default(autoincrement())
  title      String
  category   String
  shortDesc  String
  fullDesc   String
  url        String
  tools      String[]
  
  // --- เปลี่ยนแปลงตรงนี้ ---
  coverImage String   // รูปปก (URL)
  images     String[] // รูปอัลบั้มทั้งหมด (Array URL) - รูปแรกอาจจะเป็นรูปปกก็ได้
  // -----------------------

  createdAt  DateTime @default(now())
}